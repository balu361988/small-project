pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node 23.11.0'  // âœ… match the exact configured name
    }
        stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                git 'https://github.com/balu361988/small-project.git'
            }
        }

        stage('Install NPM Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${FULL_IMAGE_NAME}", "--no-cache .")
                }
            }
        }

        stage('Tag & Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-creds') {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh '''
                        sed -i 's|image: .*|image: '"$FULL_IMAGE_NAME"'|' k8s-deployment.yaml
                        kubectl apply -f k8s-deployment.yaml --validate=false
                        kubectl rollout status deployment/nodejs-app
                    '''
                }
            }
        }
    }
}
